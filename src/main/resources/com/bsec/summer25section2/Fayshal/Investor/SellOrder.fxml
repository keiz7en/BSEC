<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1041.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.Investor.SellOrderController">
    <top>
        <VBox spacing="6.0" style="-fx-padding: 16;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="Place Sell Order">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="marketNameLabel" text="Market: DSE" />
                <Label fx:id="stockHeaderLabel" text="Stock: Sample Corp (SAMP)" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="539.0" prefWidth="1037.0" spacing="14.0" style="-fx-padding: 16;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Market:"/>
                        <ComboBox fx:id="marketComboBox" prefWidth="200.0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Quantity:" />
                        <TextField fx:id="quantityField" prefWidth="120.0" promptText="0" />
                        <Label text="Order Type:" />
                        <ComboBox fx:id="orderTypeComboBox" prefWidth="170.0" />
                        <Label text="Price:" />
                        <TextField fx:id="priceField" prefWidth="120.0" promptText="0.00" />
                        <Button fx:id="validateButton" onAction="#onValidateOrder" text="Check Holdings &amp; Validate Order" />
                    </children>
                </HBox>

                <VBox spacing="8.0">
                    <children>
                        <Label text="Execution Preference:" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <RadioButton fx:id="immediateOrCancelRadio" text="Immediate or Cancel" />
                                <RadioButton fx:id="goodTillDateRadio" text="Good Till Date" />
                                <DatePicker fx:id="executionDatePicker" promptText="Execution Date" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <TableView fx:id="orderSummaryTable" prefHeight="320.0">
                    <columns>
                        <TableColumn fx:id="marketNameColumn" prefWidth="160.0" text="Market Name" />
                        <TableColumn fx:id="stockSymbolColumn" prefWidth="140.0" text="Stock Symbol" />
                        <TableColumn fx:id="quantityColumn" prefWidth="120.0" text="Quantity" />
                        <TableColumn fx:id="priceColumn" prefWidth="120.0" text="Price" />
                        <TableColumn fx:id="orderTypeColumn" prefWidth="140.0" text="Order Type" />
                        <TableColumn fx:id="executionDateColumn" prefWidth="160.0" text="Execution Date" />
                        <TableColumn fx:id="estimatedTotalColumn" prefWidth="180.0" text="Estimated Total Value" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <children>
                        <Button fx:id="confirmSellButton" onAction="#onConfirmOrder" text="Confirm Sell Order" />
                        <Button fx:id="backToPortfolioButton" onAction="#goBackToPortfolio" text="Back to Portfolio" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="6.0" style="-fx-padding: 12;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <HBox spacing="12.0">
                    <children>
                        <Label text="Order Status:" />
                        <Label fx:id="orderStatusValueLabel" text="Pending" />
                    </children>
                </HBox>
                <HBox spacing="12.0">
                    <children>
                        <Label text="Order ID:" />
                        <Label fx:id="orderIdValueLabel" text="-" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
