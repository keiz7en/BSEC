<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bsec.oop.Fayshal.Investor.SellOrder"
            prefHeight="700.0" prefWidth="900.0">

    <children>
        <!-- Header -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="900.0" alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="Place Sell Order">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#goBackToMenu" text="Back to Menu"/>
            </children>
        </HBox>

        <!-- Main Content -->
        <ScrollPane layoutX="0.0" layoutY="60.0" prefHeight="640.0" prefWidth="900.0" fitToWidth="true">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 20;">
                    <children>
                        <!-- Portfolio Section -->
                        <VBox spacing="15.0">
                            <children>
                                <Label text="1. My Portfolio Holdings:">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                                </Label>
                                <TableView fx:id="portfolioTable" prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="stockSymbolColumn" prefWidth="80.0" text="Symbol"/>
                                        <TableColumn fx:id="companyColumn" prefWidth="160.0" text="Company Name"/>
                                        <TableColumn fx:id="sharesOwnedColumn" prefWidth="100.0" text="Shares Owned"/>
                                        <TableColumn fx:id="avgPriceColumn" prefWidth="100.0" text="Avg Price (৳)"/>
                                        <TableColumn fx:id="currentPriceColumn" prefWidth="100.0" text="Current Price"/>
                                        <TableColumn fx:id="currentValueColumn" prefWidth="120.0" text="Market Value"/>
                                        <TableColumn fx:id="gainLossColumn" prefWidth="100.0" text="Gain/Loss (৳)"/>
                                        <TableColumn fx:id="gainLossPercentColumn" prefWidth="90.0" text="Gain/Loss %"/>
                                        <TableColumn fx:id="dayChangeColumn" prefWidth="100.0" text="Day Change"/>
                                        <TableColumn fx:id="weightColumn" prefWidth="80.0" text="Weight %"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Sell Order Details -->
                        <Separator/>
                        <Label text="2. Sell Order Details:">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Select Stock:"/>
                                <ComboBox fx:id="stockToSellCombo" prefWidth="200.0"
                                          promptText="Choose from portfolio"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Shares Available:"/>
                                <Label fx:id="availableSharesLabel" text="0"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Quantity to Sell:"/>
                                <TextField fx:id="quantityToSellField" prefWidth="150.0" promptText="Number of shares"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Order Type:"/>
                                <RadioButton fx:id="marketSellRadio" text="Market Order"/>
                                <RadioButton fx:id="limitSellRadio" text="Limit Order"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Limit Price:"/>
                                <TextField fx:id="limitSellPriceField" prefWidth="150.0"
                                           promptText="Enter limit price"/>
                            </children>
                        </HBox>

                        <!-- Order Summary -->
                        <Separator/>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Estimated Proceeds:"/>
                                <Label fx:id="estimatedProceedsLabel" text="0.00"/>
                            </children>
                        </HBox>

                        <!-- Action Buttons -->
                        <HBox spacing="15.0" alignment="CENTER">
                            <children>
                                <Button text="Calculate Proceeds"/>
                                <Button style="-fx-background-color: #f44336; -fx-text-fill: white;"
                                        text="Confirm Sell Order"/>
                            </children>
                        </HBox>

                        <!-- Status -->
                        <Label fx:id="statusLabel" text=""/>

                        <!-- Back Button -->
                        <HBox alignment="CENTER">
                            <children>
                                <Button onAction="#goBackToMenu" text="Back to Menu"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
