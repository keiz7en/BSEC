<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.StockExchange.ManageStockListings">
    <children>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Stock Listing Management" />
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                        <TextField fx:id="usernameField" prefWidth="160.0" promptText="Application ID" />
                        <TextField fx:id="passwordField" prefWidth="160.0" promptText="Company Name" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                        <ComboBox fx:id="applicationStatusCombo" prefWidth="180.0" promptText="Application Status" />
                        <DatePicker fx:id="submissionDatePicker" promptText="Submission Date" />
                        <Button fx:id="submitDecisionButton" onAction="#handleSubmitDecision" text="Submit Decision" />
                    </children>
                </HBox>
                <TableView fx:id="applicationsTable" prefHeight="320.0">
                    <columns>
                        <TableColumn fx:id="colAppId" prefWidth="130.0" text="Application ID" />
                        <TableColumn fx:id="colCompany" prefWidth="220.0" text="Company Name" />
                        <TableColumn fx:id="colSubmission" prefWidth="160.0" text="Submission Date" />
                        <TableColumn fx:id="colStatus" prefWidth="140.0" text="Status" />
                        <TableColumn fx:id="colDecisionDate" prefWidth="160.0" text="Decision Date" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_LEFT" spacing="10.0" />
                <HBox alignment="CENTER_LEFT" spacing="8.0" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="backButton" onAction="#goBackToMenu" text="Back to Menu" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
