<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.StockExchange.HandleTradingHalts">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Handle Trading Halts" />

        <VBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Market Activity Note / Reason for Halt:" />
                <TextField fx:id="reasonField" prefWidth="600.0" promptText="Enter reason for trading halt..." />
            </children>
        </VBox>

        <HBox spacing="20.0">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Regulatory Guideline:" />
                        <ComboBox fx:id="guidelineCombo" prefWidth="250.0" promptText="Select regulatory guideline" />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Halt Date:" />
                        <DatePicker fx:id="haltDatePicker" prefWidth="150.0" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <VBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Halt Type:" />
                <HBox spacing="20.0">
                    <children>
                        <RadioButton fx:id="fullHaltRadio" text="Full Halt" />
                        <RadioButton fx:id="partialHaltRadio" text="Partial Halt" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <HBox style="-fx-alignment: center;">
            <children>
                <Button fx:id="issueHaltButton" onAction="#issueHaltOrder" style="-fx-font-size: 14px; -fx-background-color: ; -fx-text-fill: black;" text="Issue Halt Order" />
            </children>
        </HBox>

        <Separator />

        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Trading Halts Records:" />

        <TableView fx:id="haltRecordsTable" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="haltIdColumn" prefWidth="100.0" text="Halt ID" />
                <TableColumn fx:id="reasonColumn" prefWidth="200.0" text="Reason" />
                <TableColumn fx:id="guidelineColumn" prefWidth="150.0" text="Guideline" />
                <TableColumn fx:id="haltTypeColumn" prefWidth="100.0" text="Halt Type" />
                <TableColumn fx:id="haltDateColumn" prefWidth="120.0" text="Halt Date" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goBackToDashboard" style="-fx-font-size: 14px;" text="Back to Dashboard" />
            </children>
        </HBox>
    </children>
</VBox>
