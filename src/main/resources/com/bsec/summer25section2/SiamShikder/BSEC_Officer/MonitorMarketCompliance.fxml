<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.MonitorMarketComplianceController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Market Compliance Monitoring" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180.0"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Report ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="reportIdField" promptText="Report ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Compliance Area:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="areaCombo" promptText="Select Area" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Report Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="reportDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="analyzeButton" text="Analyze Compliance" onAction="#onAnalyzeCompliance"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Compliance Report Table" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colReportId" text="Report ID" prefWidth="160.0"/>
                                <TableColumn fx:id="colArea" text="Area" prefWidth="180.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="140.0"/>
                                <TableColumn fx:id="colFollowUp" text="Follow-Up Needed" prefWidth="180.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="issueWarningButton" text="Issue Warning" onAction="#onIssueWarning"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>