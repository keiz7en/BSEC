<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.EnforcePenaltiesAndSanctionsController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Penalties &amp; Sanctions Enforcement"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="200.0"/>
                        <ColumnConstraints minWidth="300.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Case ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="caseIdField" promptText="Case ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Violation Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="violationTypeCombo" promptText="Select Violation Type" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Finding Review Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="reviewDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Investigation Findings:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="findingsArea" promptText="Investigation Findings" wrapText="true"
                                  prefRowCount="4" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="recordPenaltyButton" text="Record Penalty" onAction="#onRecordPenalty"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Penalty Records" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="penaltyTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCaseId" text="Case ID" prefWidth="160.0"/>
                                <TableColumn fx:id="colViolationType" text="Violation Type" prefWidth="200.0"/>
                                <TableColumn fx:id="colAmount" text="Penalty Amount" prefWidth="160.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="notifyButton" text="Notify Offending Party" onAction="#onNotify"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>