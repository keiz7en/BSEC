<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.ApproveRegulatoryPoliciesController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Regulatory Policy Approval" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="200.0"/>
                        <ColumnConstraints minWidth="300.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Policy Draft ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="policyIdField" promptText="Policy Draft ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Policy Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="categoryCombo" promptText="Select Category" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Date Received:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateReceivedPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Urgency:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="highPriorityRadio" text="High Priority"/>
                                <RadioButton fx:id="normalPriorityRadio" text="Normal Priority"/>
                            </children>
                        </HBox>

                        <Label text="Policy Summary:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="summaryArea" promptText="Policy Summary" wrapText="true" prefRowCount="4"
                                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="reviewButton" text="Review Policy" onAction="#onReviewPolicy"/>
                        <Button fx:id="approveButton" text="Approve Final Policy" onAction="#onApproveFinalPolicy"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Policy List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="policyTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colPolicyId" text="Policy ID" prefWidth="180.0"/>
                                <TableColumn fx:id="colCategory" text="Category" prefWidth="200.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                                <TableColumn fx:id="colApprovalDate" text="Approval Date" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>