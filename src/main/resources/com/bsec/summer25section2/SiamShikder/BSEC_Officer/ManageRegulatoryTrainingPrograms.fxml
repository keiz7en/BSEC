<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.ManageRegulatoryTrainingProgramsController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Regulatory Training Program Management"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="200.0"/>
                        <ColumnConstraints minWidth="300.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Training ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="trainingIdField" promptText="Training ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Training Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="trainingTypeCombo" promptText="Select Training Type" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Training Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="trainingDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Training Curriculum:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="curriculumArea" promptText="Training Curriculum" wrapText="true"
                                  prefRowCount="4" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Session Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="scheduledRadio" text="Scheduled"/>
                                <RadioButton fx:id="completedRadio" text="Completed"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="assessParticipantsButton" text="Assess Participants"
                                onAction="#onAssessParticipants"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Training Records" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="trainingTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colTrainingId" text="Training ID" prefWidth="180.0"/>
                                <TableColumn fx:id="colType" text="Type" prefWidth="200.0"/>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="160.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>