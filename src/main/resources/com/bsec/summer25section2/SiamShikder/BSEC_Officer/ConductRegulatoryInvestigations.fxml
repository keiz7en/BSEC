<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.ConductRegulatoryInvestigationsController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Regulatory Investigation Management"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="200.0"/>
                        <ColumnConstraints minWidth="300.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Case ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="caseIdField" promptText="Case ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Case Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="caseTypeCombo" promptText="Select Case Type" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Complaint Received Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="complaintDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Case Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="ongoingRadio" text="Ongoing"/>
                                <RadioButton fx:id="closedRadio" text="Closed"/>
                            </children>
                        </HBox>

                        <Label text="Case Details:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="detailsArea" promptText="Case Details" wrapText="true" prefRowCount="4"
                                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="gatherEvidenceButton" text="Gather Evidence" onAction="#onGatherEvidence"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Investigation Case Tracker" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="caseTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCaseId" text="Case ID" prefWidth="160.0"/>
                                <TableColumn fx:id="colType" text="Type" prefWidth="180.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="140.0"/>
                                <TableColumn fx:id="colSubmissionDate" text="Submission Date" prefWidth="180.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="submitReportButton" text="Submit Report" onAction="#onSubmitReport"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>