<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.CoordinateWithInternationalRegulators"
            prefHeight="900.0" prefWidth="1200.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Coordinate with International Regulators"/>
    <Button layoutX="1100.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Exchange Regulatory Info -->
    <Label layoutX="20.0" layoutY="80.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Exchange Regulatory Information"/>
    <TableView layoutX="20.0" layoutY="110.0" prefHeight="140.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="120.0" text="Country"/>
            <TableColumn prefWidth="180.0" text="Regulatory Body"/>
            <TableColumn prefWidth="150.0" text="Contact Person"/>
            <TableColumn prefWidth="120.0" text="Last Exchange"/>
            <TableColumn prefWidth="130.0" text="Status"/>
        </columns>
    </TableView>
    <Button layoutX="750.0" layoutY="130.0" text="Send Information"/>
    <Button layoutX="750.0" layoutY="170.0" text="Request Data"/>
    <Button layoutX="750.0" layoutY="210.0" text="Update Contact"/>

    <!-- Attend Joint Meetings -->
    <Label layoutX="20.0" layoutY="290.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Attend Joint Meetings"/>
    <Label layoutX="30.0" layoutY="330.0" text="Meeting Type:"/>
    <ChoiceBox layoutX="120.0" layoutY="325.0" prefWidth="150.0"/>
    <Label layoutX="290.0" layoutY="330.0" text="Host Organization:"/>
    <TextField layoutX="400.0" layoutY="325.0" prefWidth="200.0"/>

    <Label layoutX="30.0" layoutY="370.0" text="Date:"/>
    <DatePicker layoutX="80.0" layoutY="365.0" prefWidth="120.0"/>
    <Label layoutX="220.0" layoutY="370.0" text="Location:"/>
    <TextField layoutX="280.0" layoutY="365.0" prefWidth="180.0"/>
    <Label layoutX="480.0" layoutY="370.0" text="Participants:"/>
    <TextField layoutX="560.0" layoutY="365.0" prefWidth="80.0"/>

    <Label layoutX="30.0" layoutY="410.0" text="Agenda:"/>
    <TextArea layoutX="30.0" layoutY="440.0" prefHeight="80.0" prefWidth="600.0"
              promptText="Meeting agenda and topics..."/>
    <Button layoutX="650.0" layoutY="460.0" text="Join Meeting"/>

    <!-- Align Regulations -->
    <Label layoutX="700.0" layoutY="290.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Align Regulations"/>
    <Label layoutX="710.0" layoutY="330.0" text="Regulation Area:"/>
    <ChoiceBox layoutX="820.0" layoutY="325.0" prefWidth="150.0"/>

    <Label layoutX="710.0" layoutY="370.0" text="Alignment Status:"/>
    <ChoiceBox layoutX="820.0" layoutY="365.0" prefWidth="120.0"/>

    <Label layoutX="710.0" layoutY="410.0" text="Differences:"/>
    <TextArea layoutX="710.0" layoutY="440.0" prefHeight="80.0" prefWidth="300.0"
              promptText="Key differences to address..."/>
    <Button layoutX="710.0" layoutY="540.0" text="Compare Standards"/>
    <Button layoutX="840.0" layoutY="540.0" text="Propose Changes"/>

    <!-- Draft Cooperative Agreements -->
    <Label layoutX="20.0" layoutY="580.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Draft Cooperative Agreements"/>
    <Label layoutX="30.0" layoutY="620.0" text="Agreement Type:"/>
    <ChoiceBox layoutX="150.0" layoutY="615.0" prefWidth="150.0"/>
    <Label layoutX="320.0" layoutY="620.0" text="Partner Country:"/>
    <TextField layoutX="420.0" layoutY="615.0" prefWidth="150.0"/>

    <Label layoutX="30.0" layoutY="660.0" text="Key Terms:"/>
    <TextArea layoutX="30.0" layoutY="690.0" prefHeight="80.0" prefWidth="500.0"
              promptText="Agreement terms and conditions..."/>
    <Button layoutX="550.0" layoutY="710.0" text="Save Draft"/>
    <Button layoutX="550.0" layoutY="750.0" text="Send for Review"/>

    <!-- Publish Joint Statements -->
    <Label layoutX="650.0" layoutY="580.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="5. Publish Joint Statements"/>
    <Label layoutX="660.0" layoutY="620.0" text="Statement Type:"/>
    <ChoiceBox layoutX="760.0" layoutY="615.0" prefWidth="150.0"/>

    <CheckBox layoutX="660.0" layoutY="655.0" text="Press Release"/>
    <CheckBox layoutX="660.0" layoutY="685.0" text="Official Website"/>
    <CheckBox layoutX="660.0" layoutY="715.0" text="Industry Notice"/>
    <CheckBox layoutX="780.0" layoutY="655.0" text="Media Alert"/>
    <CheckBox layoutX="780.0" layoutY="685.0" text="Public Announcement"/>

    <Button layoutX="660.0" layoutY="750.0" text="Publish Statement"/>
    <Button layoutX="780.0" layoutY="750.0" text="Schedule Release"/>

</AnchorPane>