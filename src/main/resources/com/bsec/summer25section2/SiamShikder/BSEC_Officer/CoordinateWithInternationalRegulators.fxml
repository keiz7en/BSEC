<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.CoordinateWithInternationalRegulatorsController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="International Regulatory Coordination"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="220.0"/>
                        <ColumnConstraints minWidth="300.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Partner Agency Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="agencyNameField" promptText="Partner Agency Name" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Meeting Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="meetingTypeCombo" promptText="Select Meeting Type" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Next Meeting Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="meetingDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Agenda Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="agendaArea" promptText="Agenda Notes" wrapText="true" prefRowCount="4"
                                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Agreement Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="draftRadio" text="Draft"/>
                                <RadioButton fx:id="finalizedRadio" text="Finalized"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="draftAgreementButton" text="Draft Agreement" onAction="#onDraftAgreement"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="International Agreements" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="agreementsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colAgencyName" text="Agency Name" prefWidth="240.0"/>
                                <TableColumn fx:id="colMeetingDate" text="Meeting Date" prefWidth="180.0"/>
                                <TableColumn fx:id="colAgreementStatus" text="Agreement Status" prefWidth="180.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>