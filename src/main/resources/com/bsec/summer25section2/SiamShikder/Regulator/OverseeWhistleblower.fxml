<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.OverseeWhistleblowerController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Whistleblower Program Oversight"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="220.0"/>
                        <ColumnConstraints minWidth="320.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Report ID / Reference No.:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="reportIdField" promptText="Report ID / Reference No." GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Report Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="categoryCombo" promptText="Select Category" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Date Received:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateReceivedPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Urgency Level:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="highPriorityRadio" text="High Priority"/>
                                <RadioButton fx:id="mediumPriorityRadio" text="Medium Priority"/>
                                <RadioButton fx:id="lowPriorityRadio" text="Low Priority"/>
                            </children>
                        </HBox>

                        <Label text="Report Summary:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="summaryArea" promptText="Report Summary" wrapText="true" prefRowCount="4"
                                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="verifyButton" text="Verify Report" onAction="#onVerifyReport"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Investigation Tracker" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="trackerTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colReportId" text="Report ID" prefWidth="160.0"/>
                                <TableColumn fx:id="colCategory" text="Category" prefWidth="160.0"/>
                                <TableColumn fx:id="colAssignedTeam" text="Assigned Team" prefWidth="200.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="140.0"/>
                                <TableColumn fx:id="colOutcome" text="Outcome" prefWidth="200.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="closeAndReportButton" text="Close Case &amp; Generate Report"
                                onAction="#onCloseAndGenerateReport"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>