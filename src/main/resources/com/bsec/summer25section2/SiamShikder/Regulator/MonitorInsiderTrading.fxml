<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.MonitorInsiderTrading"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- Header -->
    <HBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1200.0" alignment="CENTER_LEFT" spacing="20.0"
          style="-fx-padding: 10;">
        <children>
            <Label text="Monitor Insider Trading" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#goBack" style="-fx-font-size: 14px;"/>
        </children>
    </HBox>

    <!-- Main Content with ScrollPane -->
    <ScrollPane layoutX="0.0" layoutY="60.0" prefHeight="740.0" prefWidth="1200.0" fitToWidth="true" fitToHeight="true">
        <content>
            <VBox spacing="30.0" style="-fx-padding: 20;">
                <children>
                    <!-- Track Suspicious Trading Pattern Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="1. Track Suspicious Trading Pattern"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Button text="Run Analysis" prefWidth="120.0"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    <Button text="Set Filters" prefWidth="120.0"/>
                                    <Button text="Export Data" prefWidth="120.0"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label text="Risk Level:" style="-fx-font-weight: bold;"/>
                                    <ComboBox prefWidth="120.0"/>
                                </children>
                            </HBox>

                            <TableView prefHeight="200.0">
                                <columns>
                                    <TableColumn prefWidth="100.0" text="Trade ID"/>
                                    <TableColumn prefWidth="120.0" text="Stock Symbol"/>
                                    <TableColumn prefWidth="100.0" text="Volume"/>
                                    <TableColumn prefWidth="100.0" text="Price"/>
                                    <TableColumn prefWidth="140.0" text="Date Time"/>
                                    <TableColumn prefWidth="120.0" text="Trader ID"/>
                                    <TableColumn prefWidth="120.0" text="Risk Score"/>
                                    <TableColumn prefWidth="100.0" text="Alert Level"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>

                    <!-- Match with Insider Profiles Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="2. Match with Insider Profiles"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="30.0" alignment="TOP_LEFT">
                                <children>
                                    <!-- Left side form -->
                                    <VBox spacing="15.0" prefWidth="400.0">
                                        <children>
                                            <Label text="Trader Information"
                                                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Trader ID:" style="-fx-font-weight: bold;"/>
                                                    <TextField prefWidth="180.0" promptText="Enter trader ID"/>
                                                    <Button text="Search" prefWidth="80.0"/>
                                                </children>
                                            </HBox>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Insider Status:" style="-fx-font-weight: bold;"/>
                                                    <ChoiceBox prefWidth="180.0"/>
                                                </children>
                                            </HBox>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Company:" style="-fx-font-weight: bold;"/>
                                                    <TextField prefWidth="200.0" promptText="Company name"/>
                                                </children>
                                            </HBox>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Position:" style="-fx-font-weight: bold;"/>
                                                    <TextField prefWidth="200.0" promptText="Job position"/>
                                                </children>
                                            </HBox>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Access Level:" style="-fx-font-weight: bold;"/>
                                                    <ChoiceBox prefWidth="150.0"/>
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>

                                    <!-- Right side table -->
                                    <VBox spacing="15.0" prefWidth="500.0">
                                        <children>
                                            <Label text="Match Results"
                                                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                                            <TableView prefHeight="180.0">
                                                <columns>
                                                    <TableColumn prefWidth="120.0" text="Match ID"/>
                                                    <TableColumn prefWidth="140.0" text="Confidence"/>
                                                    <TableColumn prefWidth="140.0" text="Risk Level"/>
                                                    <TableColumn prefWidth="100.0" text="Actions"/>
                                                </columns>
                                            </TableView>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Button text="Verify Match" prefWidth="120.0"/>
                                                    <Button text="Add Profile" prefWidth="120.0"/>
                                                    <Button text="Update Info" prefWidth="120.0"/>
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Flag Potential Violations Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="3. Flag Potential Violations"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="30.0" alignment="TOP_LEFT">
                                <children>
                                    <!-- Violation types -->
                                    <VBox spacing="15.0" prefWidth="300.0">
                                        <children>
                                            <Label text="Violation Types:" style="-fx-font-weight: bold;"/>
                                            <VBox spacing="5.0">
                                                <children>
                                                    <CheckBox text="Unusual Volume"/>
                                                    <CheckBox text="Timing Anomaly"/>
                                                    <CheckBox text="Price Movement"/>
                                                    <CheckBox text="Information Access"/>
                                                    <CheckBox text="Pattern Match"/>
                                                    <CheckBox text="Historical Pattern"/>
                                                </children>
                                            </VBox>
                                        </children>
                                    </VBox>

                                    <!-- Severity and controls -->
                                    <VBox spacing="15.0" prefWidth="400.0">
                                        <children>
                                            <Label text="Violation Assessment:" style="-fx-font-weight: bold;"/>

                                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Severity:" style="-fx-font-weight: bold;"/>
                                                    <Slider prefWidth="200.0"/>
                                                    <Label text="High"/>
                                                </children>
                                            </HBox>

                                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Label text="Alert Priority:" style="-fx-font-weight: bold;"/>
                                                    <ChoiceBox prefWidth="150.0"/>
                                                </children>
                                            </HBox>

                                            <VBox spacing="10.0">
                                                <children>
                                                    <Label text="Violation Notes:" style="-fx-font-weight: bold;"/>
                                                    <TextArea prefHeight="80.0" promptText="Enter violation details..."
                                                              wrapText="true"/>
                                                </children>
                                            </VBox>

                                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                                <children>
                                                    <Button text="Flag Violation" prefWidth="120.0"
                                                            style="-fx-background-color: #FF5722; -fx-text-fill: white;"/>
                                                    <Button text="Create Alert" prefWidth="120.0"
                                                            style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Generate Investigation Report Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="4. Generate Investigation Report"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Case ID:" style="-fx-font-weight: bold;"/>
                                            <TextField prefWidth="150.0" promptText="Case identifier"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Report Type:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="150.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Priority:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="120.0"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <VBox spacing="10.0">
                                <children>
                                    <Label text="Investigation Findings:" style="-fx-font-weight: bold;"/>
                                    <TextArea prefHeight="120.0"
                                              promptText="Enter detailed investigation findings and analysis..."
                                              wrapText="true"/>
                                </children>
                            </VBox>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Button text="Generate Report" prefWidth="140.0"
                                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                                    <Button text="Save Draft" prefWidth="120.0"/>
                                    <Button text="Export PDF" prefWidth="120.0"/>
                                    <Button text="Print Report" prefWidth="120.0"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Submit to Enforcement Unit Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="5. Submit to Enforcement Unit"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Enforcement Team:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="180.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Priority Level:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="150.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Due Date:" style="-fx-font-weight: bold;"/>
                                            <DatePicker prefWidth="150.0"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <HBox spacing="30.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="5.0">
                                        <children>
                                            <CheckBox text="Urgent Review Required"/>
                                            <CheckBox text="Legal Action Recommended"/>
                                            <CheckBox text="Financial Penalty Suggested"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <children>
                                            <CheckBox text="Suspend Trading Rights"/>
                                            <CheckBox text="Notify Other Exchanges"/>
                                            <CheckBox text="Media Alert Required"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <HBox spacing="15.0" alignment="CENTER">
                                <children>
                                    <Button text="Submit Case" prefWidth="130.0"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    <Button text="Schedule Meeting" prefWidth="150.0"/>
                                    <Button text="Send Alert" prefWidth="120.0"/>
                                    <Button text="Generate Summary" prefWidth="150.0"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>