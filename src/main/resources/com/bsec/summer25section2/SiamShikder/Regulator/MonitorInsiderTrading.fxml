<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.MonitorInsiderTradingController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Insider Trading Monitoring" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180.0"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Stock Symbol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="stockSymbolField" promptText="Stock Symbol" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Monitoring Period:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="monitoringPeriodCombo" promptText="Select Monitoring Period"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Start Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="End Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Alert Severity:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="lowRadio" text="Low"/>
                                <RadioButton fx:id="mediumRadio" text="Medium"/>
                                <RadioButton fx:id="highRadio" text="High"/>
                            </children>
                        </HBox>

                        <Label text="Suspicious Trading Pattern Details:" GridPane.rowIndex="5"
                               GridPane.columnIndex="0"/>
                        <TextArea fx:id="patternDetailsArea" promptText="Suspicious Trading Pattern Details"
                                  wrapText="true" prefRowCount="4" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="matchProfilesButton" text="Match with Insider Profiles"
                                onAction="#onMatchProfiles"/>
                        <Button fx:id="flagViolationButton" text="Flag Violation" onAction="#onFlagViolation"/>
                        <Button fx:id="generateReportButton" text="Generate Report" onAction="#onGenerateReport"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Suspicious Activity Log" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="suspiciousTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="140.0"/>
                                <TableColumn fx:id="colStockSymbol" text="Stock Symbol" prefWidth="160.0"/>
                                <TableColumn fx:id="colInsiderName" text="Insider Name" prefWidth="200.0"/>
                                <TableColumn fx:id="colViolationType" text="Violation Type" prefWidth="180.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>