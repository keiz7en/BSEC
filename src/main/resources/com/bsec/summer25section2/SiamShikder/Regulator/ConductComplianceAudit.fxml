<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ConductComplianceAuditController" prefWidth="1000.0"
            prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Compliance Audit &amp; Training Management"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="220.0"/>
                        <ColumnConstraints minWidth="320.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Training Curriculum Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="curriculumTitleField" promptText="Training Curriculum Title"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Audit Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="auditTypeCombo" promptText="Select Audit Type" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Session Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="sessionDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Session Mode:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="onlineRadio" text="Online"/>
                                <RadioButton fx:id="onSiteRadio" text="On-Site"/>
                            </children>
                        </HBox>

                        <Label text="Number of Participants:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="participantsField" promptText="Number of Participants" GridPane.rowIndex="4"
                                   GridPane.columnIndex="1"/>

                        <Label text="Curriculum Overview:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextArea fx:id="overviewArea" promptText="Curriculum Overview" wrapText="true" prefRowCount="4"
                                  GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="scheduleButton" text="Schedule Session" onAction="#onScheduleSession"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Audit &amp; Training Records" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="recordsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colTitle" text="Curriculum Title" prefWidth="220.0"/>
                                <TableColumn fx:id="colAuditType" text="Audit Type" prefWidth="160.0"/>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="140.0"/>
                                <TableColumn fx:id="colMode" text="Mode" prefWidth="120.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="issueCertificatesButton" text="Issue Certificates"
                                onAction="#onIssueCertificates"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>