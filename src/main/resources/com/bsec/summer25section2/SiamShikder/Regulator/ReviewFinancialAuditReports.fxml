<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ReviewFinancialAuditReportsController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Financial Audit Report Review"
                               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180.0"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Company Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="companyNameField" promptText="Company Name" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Financial Year:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="financialYearCombo" promptText="Select Financial Year" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Report Submission Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="reportDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Report Type:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="annualAuditRadio" text="Annual Audit"/>
                                <RadioButton fx:id="quarterlyReviewRadio" text="Quarterly Review"/>
                                <RadioButton fx:id="specialInvestigationRadio" text="Special Investigation"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="loadReportButton" text="Load Audit Report" onAction="#onLoadReport"/>
                        <Button fx:id="highlightButton" text="Highlight Discrepancies"
                                onAction="#onHighlightDiscrepancies"/>
                        <Button fx:id="issueNoticeButton" text="Issue Compliance Notice"
                                onAction="#onIssueComplianceNotice"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="8.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180.0"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Discrepancy Details:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextArea fx:id="discrepancyDetailsArea" promptText="Discrepancy Details" wrapText="true"
                                  prefRowCount="4" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Audit Report Summary" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="auditSummaryTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colSectionName" text="Section Name" prefWidth="200.0"/>
                                <TableColumn fx:id="colFindings" text="Findings" prefWidth="300.0"/>
                                <TableColumn fx:id="colSeverity" text="Severity" prefWidth="140.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="140.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="submitFinalOpinionButton" text="Submit Final Opinion"
                                onAction="#onSubmitFinalOpinion"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>