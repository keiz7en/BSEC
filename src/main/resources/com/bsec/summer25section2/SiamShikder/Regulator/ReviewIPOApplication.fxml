<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ReviewIPOApplicationController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="16.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <!-- Header -->
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="IPO Application Review" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <!-- Form -->
                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="160.0"/>
                        <ColumnConstraints minWidth="260.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="35.0"/>
                        <RowConstraints minHeight="35.0"/>
                        <RowConstraints minHeight="35.0"/>
                        <RowConstraints minHeight="35.0"/>
                        <RowConstraints minHeight="35.0"/>
                        <RowConstraints minHeight="120.0" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <children>
                        <Label text="Application ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="applicationIdField" promptText="Application ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Company Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="companyNameCombo" promptText="Select Company Name" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Submission Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="submissionDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Compliance Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="12.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="compliantRadio" text="Compliant"/>
                                <RadioButton fx:id="nonCompliantRadio" text="Non-Compliant"/>
                            </children>
                        </HBox>

                        <Label text="Financial Reviewer Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="reviewerNameField" promptText="Financial Reviewer Name" GridPane.rowIndex="4"
                                   GridPane.columnIndex="1"/>

                        <Label text="Comments / Review Notes:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextArea fx:id="commentsArea" promptText="Comments / Review Notes" wrapText="true"
                                  prefRowCount="4" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <!-- Actions -->
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="approveButton" text="Approve IPO" onAction="#onApprove"/>
                        <Button fx:id="rejectButton" text="Reject IPO" onAction="#onReject"/>
                    </children>
                </HBox>

                <!-- Table -->
                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="IPO Applications List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="applicationsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colAppId" text="Application ID" prefWidth="150.0"/>
                                <TableColumn fx:id="colCompanyName" text="Company Name" prefWidth="200.0"/>
                                <TableColumn fx:id="colSubmissionDate" text="Submission Date" prefWidth="160.0"/>
                                <TableColumn fx:id="colComplianceStatus" text="Compliance Status" prefWidth="160.0"/>
                                <TableColumn fx:id="colReviewDecision" text="Review Decision" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
