<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.SuspendCompanyListingController"
            prefWidth="1000.0" prefHeight="700.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Company Listing Suspension" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back to Menu" onAction="#goBack"/>
                    </children>
                </HBox>

                <GridPane hgap="12.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints minWidth="180.0"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Company ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="companyIdField" promptText="Company ID" GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Company Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="companyNameCombo" promptText="Select Company Name" GridPane.rowIndex="1"
                                  GridPane.columnIndex="1"/>

                        <Label text="Violation Detection Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="violationDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Violation Type:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="rbFinancialMisconduct" text="Financial Misconduct"/>
                                <RadioButton fx:id="rbRegulatoryBreach" text="Regulatory Breach"/>
                                <RadioButton fx:id="rbMarketManipulation" text="Market Manipulation"/>
                                <RadioButton fx:id="rbOther" text="Other"/>
                            </children>
                        </HBox>

                        <Label text="Violation Evidence Summary:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="evidenceSummaryArea" promptText="Violation Evidence Summary" wrapText="true"
                                  prefRowCount="4" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="reviewEvidenceButton" text="Review Evidence" onAction="#onReviewEvidence"/>
                        <Button fx:id="triggerSuspensionButton" text="Trigger Suspension"
                                onAction="#onTriggerSuspension"/>
                    </children>
                </HBox>

                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Suspension Tracker" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="suspensionTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCompanyId" text="Company ID" prefWidth="140.0"/>
                                <TableColumn fx:id="colCompanyName" text="Company Name" prefWidth="220.0"/>
                                <TableColumn fx:id="colViolationType" text="Violation Type" prefWidth="180.0"/>
                                <TableColumn fx:id="colSuspensionDate" text="Suspension Date" prefWidth="160.0"/>
                                <TableColumn fx:id="colCurrentStatus" text="Current Status" prefWidth="140.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>