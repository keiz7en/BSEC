<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.BSEC_Officer.MonitorMarketCompliance"
            prefHeight="900.0" prefWidth="1200.0">

    <!-- Header -->
    <HBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1200.0" alignment="CENTER_LEFT" spacing="20.0"
          style="-fx-padding: 10;">
        <children>
            <Label text="Monitor Market Compliance" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#goBack" style="-fx-font-size: 14px;"/>
        </children>
    </HBox>

    <!-- Main Content with ScrollPane -->
    <ScrollPane layoutX="0.0" layoutY="60.0" prefHeight="840.0" prefWidth="1200.0" fitToWidth="true" fitToHeight="true">
        <content>
            <VBox spacing="30.0" style="-fx-padding: 20;">
                <children>
                    <!-- Collect Compliance Reports Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="1. Collect Compliance Reports"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Button text="Collect Reports" prefWidth="140.0"/>
                                    <Button text="Send Reminder" prefWidth="130.0"/>
                                    <Button text="View Report" prefWidth="120.0"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label text="Status Filter:" style="-fx-font-weight: bold;"/>
                                    <ComboBox prefWidth="150.0"/>
                                </children>
                            </HBox>

                            <TableView prefHeight="200.0">
                                <columns>
                                    <TableColumn prefWidth="120.0" text="Report ID"/>
                                    <TableColumn prefWidth="200.0" text="Entity Name"/>
                                    <TableColumn prefWidth="150.0" text="Report Type"/>
                                    <TableColumn prefWidth="120.0" text="Due Date"/>
                                    <TableColumn prefWidth="120.0" text="Status"/>
                                    <TableColumn prefWidth="100.0" text="Priority"/>
                                    <TableColumn prefWidth="120.0" text="Actions"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>

                    <!-- Analyze Compliance Status Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="2. Analyze Compliance Status"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Analysis Period:" style="-fx-font-weight: bold;"/>
                                    <DatePicker prefWidth="120.0"/>
                                    <Label text="to" style="-fx-font-weight: bold;"/>
                                    <DatePicker prefWidth="120.0"/>
                                    <Button text="Run Analysis" prefWidth="120.0"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Button text="Generate Chart" prefWidth="140.0"/>
                                    <Button text="Export Data" prefWidth="120.0"/>
                                </children>
                            </HBox>

                            <VBox spacing="10.0">
                                <children>
                                    <Label text="Compliance Analysis Results:" style="-fx-font-weight: bold;"/>
                                    <TableView prefHeight="150.0">
                                        <columns>
                                            <TableColumn prefWidth="180.0" text="Compliance Area"/>
                                            <TableColumn prefWidth="120.0" text="Total Entities"/>
                                            <TableColumn prefWidth="120.0" text="Compliant"/>
                                            <TableColumn prefWidth="120.0" text="Non-Compliant"/>
                                            <TableColumn prefWidth="120.0" text="Percentage"/>
                                            <TableColumn prefWidth="120.0" text="Trend"/>
                                        </columns>
                                    </TableView>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Identify Non-Compliance Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="3. Identify Non-Compliance"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Severity Filter:" style="-fx-font-weight: bold;"/>
                                    <ComboBox prefWidth="120.0"/>
                                    <Label text="Violation Type:" style="-fx-font-weight: bold;"/>
                                    <ComboBox prefWidth="150.0"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Button text="Flag Entity" prefWidth="120.0"
                                            style="-fx-background-color: #FF5722; -fx-text-fill: white;"/>
                                    <Button text="Investigate" prefWidth="120.0"/>
                                </children>
                            </HBox>

                            <TableView prefHeight="180.0">
                                <columns>
                                    <TableColumn prefWidth="120.0" text="Entity ID"/>
                                    <TableColumn prefWidth="180.0" text="Entity Name"/>
                                    <TableColumn prefWidth="150.0" text="Violation Type"/>
                                    <TableColumn prefWidth="100.0" text="Severity"/>
                                    <TableColumn prefWidth="120.0" text="Detection Date"/>
                                    <TableColumn prefWidth="120.0" text="Risk Score"/>
                                    <TableColumn prefWidth="100.0" text="Status"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>

                    <!-- Issue Warning Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="4. Issue Warning" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Warning Type:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="150.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Target Entity:" style="-fx-font-weight: bold;"/>
                                            <TextField prefWidth="200.0" promptText="Enter entity name"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Deadline:" style="-fx-font-weight: bold;"/>
                                            <DatePicker prefWidth="150.0"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <VBox spacing="10.0">
                                <children>
                                    <Label text="Warning Message:" style="-fx-font-weight: bold;"/>
                                    <TextArea prefHeight="100.0" promptText="Enter detailed warning message..."
                                              wrapText="true"/>
                                </children>
                            </VBox>

                            <HBox spacing="15.0" alignment="CENTER_LEFT">
                                <children>
                                    <Button text="Issue Warning" prefWidth="130.0"
                                            style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                                    <Button text="Send Notification" prefWidth="140.0"/>
                                    <Button text="Schedule Follow-up" prefWidth="150.0"/>
                                    <Button text="Generate Letter" prefWidth="130.0"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Follow up on Corrections Section -->
                    <VBox spacing="15.0">
                        <children>
                            <Label text="5. Follow up on Corrections"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <HBox spacing="20.0" alignment="CENTER_LEFT">
                                <children>
                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Follow-up Date:" style="-fx-font-weight: bold;"/>
                                            <DatePicker prefWidth="150.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Current Status:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="150.0"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="10.0">
                                        <children>
                                            <Label text="Priority Level:" style="-fx-font-weight: bold;"/>
                                            <ChoiceBox prefWidth="120.0"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <VBox spacing="10.0">
                                <children>
                                    <Label text="Follow-up Notes:" style="-fx-font-weight: bold;"/>
                                    <TextArea prefHeight="80.0"
                                              promptText="Enter follow-up observations and actions taken..."
                                              wrapText="true"/>
                                </children>
                            </VBox>

                            <HBox spacing="15.0" alignment="CENTER">
                                <children>
                                    <Button text="Update Status" prefWidth="130.0"/>
                                    <Button text="Schedule Review" prefWidth="140.0"/>
                                    <Button text="Close Case" prefWidth="120.0"
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    <Button text="Escalate Issue" prefWidth="130.0"
                                            style="-fx-background-color: #FF5722; -fx-text-fill: white;"/>
                                    <Button text="Generate Report" prefWidth="140.0"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>