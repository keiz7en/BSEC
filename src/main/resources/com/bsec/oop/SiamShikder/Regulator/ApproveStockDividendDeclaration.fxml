<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ApproveStockDividendDeclaration"
            prefHeight="700.0" prefWidth="1000.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Approve Stock Dividend Declaration"/>
    <Button layoutX="900.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Receive Dividend Declaration Section -->
    <Label layoutX="20.0" layoutY="70.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Receive Dividend Declaration"/>
    <TableView layoutX="20.0" layoutY="100.0" prefHeight="150.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Declaration ID"/>
            <TableColumn prefWidth="200.0" text="Company Name"/>
            <TableColumn prefWidth="100.0" text="Dividend Type"/>
            <TableColumn prefWidth="100.0" text="Amount/Rate"/>
            <TableColumn prefWidth="100.0" text="Submit Date"/>
            <TableColumn prefWidth="100.0" text="Status"/>
        </columns>
    </TableView>
    <Button layoutX="730.0" layoutY="120.0" text="View Declaration"/>
    <Button layoutX="730.0" layoutY="160.0" text="Download Documents"/>
    <Button layoutX="730.0" layoutY="200.0" text="Check History"/>
    <Button layoutX="730.0" layoutY="240.0" text="Refresh List"/>

    <!-- Validate Declaration Details Section -->
    <Label layoutX="20.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Validate Declaration Details"/>
    <Label layoutX="30.0" layoutY="300.0" text="Company:"/>
    <TextField layoutX="100.0" layoutY="295.0" prefWidth="200.0"/>
    <Label layoutX="320.0" layoutY="300.0" text="Stock Symbol:"/>
    <TextField layoutX="410.0" layoutY="295.0" prefWidth="100.0"/>

    <Label layoutX="30.0" layoutY="335.0" text="Dividend Rate:"/>
    <TextField layoutX="120.0" layoutY="330.0" prefWidth="80.0"/>
    <Label layoutX="210.0" layoutY="335.0" text="%"/>
    <Label layoutX="240.0" layoutY="335.0" text="Ex-Dividend Date:"/>
    <DatePicker layoutX="350.0" layoutY="330.0" prefWidth="130.0"/>

    <Label layoutX="30.0" layoutY="370.0" text="Record Date:"/>
    <DatePicker layoutX="110.0" layoutY="365.0" prefWidth="130.0"/>
    <Label layoutX="250.0" layoutY="370.0" text="Payment Date:"/>
    <DatePicker layoutX="340.0" layoutY="365.0" prefWidth="130.0"/>

    <Label layoutX="30.0" layoutY="405.0" text="Total Amount:"/>
    <TextField layoutX="120.0" layoutY="400.0" prefWidth="120.0"/>
    <Label layoutX="250.0" layoutY="405.0" text="Shares Outstanding:"/>
    <TextField layoutX="370.0" layoutY="400.0" prefWidth="120.0"/>

    <CheckBox layoutX="520.0" layoutY="300.0" text="Board Resolution Attached"/>
    <CheckBox layoutX="520.0" layoutY="325.0" text="Financial Statements Verified"/>
    <CheckBox layoutX="520.0" layoutY="350.0" text="Cash Flow Adequate"/>
    <CheckBox layoutX="520.0" layoutY="375.0" text="Regulatory Compliance Met"/>
    <CheckBox layoutX="520.0" layoutY="400.0" text="Shareholder Approval Obtained"/>

    <Button layoutX="700.0" layoutY="340.0" text="Validate All"/>
    <Button layoutX="700.0" layoutY="380.0" text="Request Documents"/>

    <!-- Approve or Request Change Section -->
    <Label layoutX="20.0" layoutY="450.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Approve or Request Change"/>
    <Label layoutX="30.0" layoutY="480.0" text="Declaration ID:"/>
    <TextField layoutX="140.0" layoutY="475.0" prefWidth="150.0"/>
    <Label layoutX="300.0" layoutY="480.0" text="Decision:"/>
    <RadioButton layoutX="360.0" layoutY="480.0" text="Approve"/>
    <RadioButton layoutX="440.0" layoutY="480.0" text="Request Changes"/>
    <RadioButton layoutX="560.0" layoutY="480.0" text="Reject"/>

    <Label layoutX="30.0" layoutY="510.0" text="Comments/Conditions:"/>
    <TextArea layoutX="30.0" layoutY="530.0" prefHeight="80.0" prefWidth="500.0"
              promptText="Enter approval conditions or change requests..."/>
    <Button layoutX="540.0" layoutY="550.0" text="Submit Decision"/>
    <Button layoutX="650.0" layoutY="550.0" text="Schedule Review"/>

    <!-- Notify Company and Broker Section -->
    <Label layoutX="20.0" layoutY="630.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Notify Company and Broker"/>
    <Label layoutX="30.0" layoutY="660.0" text="Notification Recipients:"/>
    <CheckBox layoutX="170.0" layoutY="660.0" text="Company Management"/>
    <CheckBox layoutX="300.0" layoutY="660.0" text="Stock Exchange"/>
    <CheckBox layoutX="430.0" layoutY="660.0" text="Brokers"/>
    <CheckBox layoutX="500.0" layoutY="660.0" text="Public Disclosure"/>
    <Button layoutX="620.0" layoutY="655.0" text="Send Notifications"/>
    <Button layoutX="750.0" layoutY="655.0" text="Generate Press Release"/>

</AnchorPane>