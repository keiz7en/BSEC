<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ReviewFinancialAuditReports"
            prefHeight="900.0" prefWidth="1200.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Review Financial Audit Reports"/>
    <Button layoutX="1100.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Load Uploaded Audit Reports Section -->
    <Label layoutX="20.0" layoutY="70.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Load Uploaded Audit Reports"/>
    <TableView layoutX="20.0" layoutY="100.0" prefHeight="150.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Report ID"/>
            <TableColumn prefWidth="200.0" text="Company Name"/>
            <TableColumn prefWidth="100.0" text="Audit Year"/>
            <TableColumn prefWidth="120.0" text="Auditor Firm"/>
            <TableColumn prefWidth="100.0" text="Upload Date"/>
            <TableColumn prefWidth="80.0" text="Status"/>
        </columns>
    </TableView>
    <Button layoutX="730.0" layoutY="120.0" text="Load Report"/>
    <Button layoutX="730.0" layoutY="160.0" text="Download PDF"/>
    <Button layoutX="730.0" layoutY="200.0" text="View Details"/>
    <Button layoutX="730.0" layoutY="240.0" text="Refresh List"/>

    <!-- Highlight Discrepancies Section -->
    <Label layoutX="20.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Highlight Discrepancies"/>
    <Label layoutX="30.0" layoutY="300.0" text="Selected Report:"/>
    <TextField layoutX="140.0" layoutY="295.0" prefWidth="200.0"/>
    <Label layoutX="350.0" layoutY="300.0" text="Analysis Type:"/>
    <ChoiceBox layoutX="440.0" layoutY="295.0" prefWidth="130.0"/>
    <Button layoutX="580.0" layoutY="295.0" text="Run Analysis"/>

    <TableView layoutX="30.0" layoutY="330.0" prefHeight="100.0" prefWidth="600.0">
        <columns>
            <TableColumn prefWidth="80.0" text="Item"/>
            <TableColumn prefWidth="150.0" text="Expected Value"/>
            <TableColumn prefWidth="150.0" text="Reported Value"/>
            <TableColumn prefWidth="100.0" text="Variance"/>
            <TableColumn prefWidth="120.0" text="Severity"/>
        </columns>
    </TableView>
    <Button layoutX="640.0" layoutY="350.0" text="Flag Issue"/>
    <Button layoutX="640.0" layoutY="390.0" text="Add Note"/>

    <!-- Issue Compliance Notice Section -->
    <Label layoutX="20.0" layoutY="450.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Issue Compliance Notice"/>
    <Label layoutX="30.0" layoutY="480.0" text="Notice Type:"/>
    <ChoiceBox layoutX="120.0" layoutY="475.0" prefWidth="150.0"/>
    <Label layoutX="280.0" layoutY="480.0" text="Priority:"/>
    <ChoiceBox layoutX="330.0" layoutY="475.0" prefWidth="100.0"/>
    <Label layoutX="440.0" layoutY="480.0" text="Due Date:"/>
    <DatePicker layoutX="500.0" layoutY="475.0" prefWidth="130.0"/>
    <Button layoutX="640.0" layoutY="475.0" text="Generate Notice"/>

    <Label layoutX="30.0" layoutY="510.0" text="Notice Content:"/>
    <TextArea layoutX="30.0" layoutY="530.0" prefHeight="80.0" prefWidth="500.0"
              promptText="Enter compliance notice details..."/>
    <Button layoutX="540.0" layoutY="550.0" text="Send Notice"/>
    <Button layoutX="620.0" layoutY="550.0" text="Save Draft"/>

    <!-- Archive Feedback Section -->
    <Label layoutX="750.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Archive Feedback"/>
    <Label layoutX="760.0" layoutY="300.0" text="Feedback Type:"/>
    <ChoiceBox layoutX="860.0" layoutY="295.0" prefWidth="120.0"/>
    <Label layoutX="760.0" layoutY="330.0" text="Category:"/>
    <ChoiceBox layoutX="820.0" layoutY="325.0" prefWidth="120.0"/>
    <TextArea layoutX="750.0" layoutY="355.0" prefHeight="60.0" prefWidth="230.0" promptText="Record feedback..."/>
    <Button layoutX="750.0" layoutY="425.0" text="Archive Record"/>
    <Button layoutX="860.0" layoutY="425.0" text="View Archive"/>

    <!-- Report and Submit Opinions Section -->
    <Label layoutX="750.0" layoutY="470.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="5. Report and Submit Opinions"/>
    <Label layoutX="760.0" layoutY="500.0" text="Opinion Type:"/>
    <ChoiceBox layoutX="850.0" layoutY="495.0" prefWidth="120.0"/>
    <Label layoutX="760.0" layoutY="530.0" text="Recommendation:"/>
    <ChoiceBox layoutX="870.0" layoutY="525.0" prefWidth="100.0"/>
    <Label layoutX="760.0" layoutY="560.0" text="Summary:"/>
    <TextArea layoutX="750.0" layoutY="580.0" prefHeight="80.0" prefWidth="230.0" promptText="Executive summary..."/>
    <Button layoutX="750.0" layoutY="670.0" text="Submit Opinion"/>
    <Button layoutX="860.0" layoutY="670.0" text="Generate Report"/>

</AnchorPane>