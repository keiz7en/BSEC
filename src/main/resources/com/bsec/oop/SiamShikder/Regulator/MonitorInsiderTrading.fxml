<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.MonitorInsiderTrading"
            prefHeight="700.0" prefWidth="1000.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Monitor Insider Trading"/>
    <Button layoutX="900.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Track Suspicious Trading Pattern Section -->
    <Label layoutX="20.0" layoutY="70.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Track Suspicious Trading Pattern"/>
    <TableView layoutX="20.0" layoutY="100.0" prefHeight="120.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Trade ID"/>
            <TableColumn prefWidth="150.0" text="Stock Symbol"/>
            <TableColumn prefWidth="100.0" text="Volume"/>
            <TableColumn prefWidth="100.0" text="Price"/>
            <TableColumn prefWidth="100.0" text="Date/Time"/>
            <TableColumn prefWidth="100.0" text="Trader ID"/>
            <TableColumn prefWidth="50.0" text="Risk Score"/>
        </columns>
    </TableView>
    <Button layoutX="730.0" layoutY="120.0" text="Run Analysis"/>
    <Button layoutX="730.0" layoutY="160.0" text="Set Filters"/>
    <Button layoutX="730.0" layoutY="200.0" text="Export Data"/>

    <!-- Match with Insider Profiles Section -->
    <Label layoutX="20.0" layoutY="240.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Match with Insider Profiles"/>
    <Label layoutX="30.0" layoutY="270.0" text="Trader ID:"/>
    <TextField layoutX="100.0" layoutY="265.0" prefWidth="150.0"/>
    <Button layoutX="260.0" layoutY="265.0" text="Search"/>
    <Label layoutX="30.0" layoutY="300.0" text="Insider Status:"/>
    <ChoiceBox layoutX="130.0" layoutY="295.0" prefWidth="120.0"/>
    <Label layoutX="270.0" layoutY="300.0" text="Company:"/>
    <TextField layoutX="330.0" layoutY="295.0" prefWidth="150.0"/>
    <Label layoutX="30.0" layoutY="330.0" text="Position:"/>
    <TextField layoutX="90.0" layoutY="325.0" prefWidth="200.0"/>
    <Label layoutX="300.0" layoutY="330.0" text="Access Level:"/>
    <ChoiceBox layoutX="380.0" layoutY="325.0" prefWidth="100.0"/>
    <TableView layoutX="500.0" layoutY="270.0" prefHeight="80.0" prefWidth="300.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Match ID"/>
            <TableColumn prefWidth="100.0" text="Confidence"/>
            <TableColumn prefWidth="100.0" text="Risk Level"/>
        </columns>
    </TableView>
    <Button layoutX="810.0" layoutY="305.0" text="Verify Match"/>

    <!-- Flag Potential Violations Section -->
    <Label layoutX="20.0" layoutY="370.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Flag Potential Violations"/>
    <CheckBox layoutX="30.0" layoutY="400.0" text="Unusual Volume"/>
    <CheckBox layoutX="150.0" layoutY="400.0" text="Timing Anomaly"/>
    <CheckBox layoutX="270.0" layoutY="400.0" text="Price Movement"/>
    <CheckBox layoutX="30.0" layoutY="425.0" text="Information Access"/>
    <CheckBox layoutX="150.0" layoutY="425.0" text="Pattern Match"/>
    <CheckBox layoutX="270.0" layoutY="425.0" text="Historical Pattern"/>
    <Label layoutX="400.0" layoutY="400.0" text="Violation Severity:"/>
    <Slider layoutX="500.0" layoutY="400.0" prefWidth="150.0"/>
    <Label layoutX="400.0" layoutY="425.0" text="Alert Priority:"/>
    <ChoiceBox layoutX="490.0" layoutY="420.0" prefWidth="100.0"/>
    <Button layoutX="600.0" layoutY="410.0" text="Flag Violation"/>
    <Button layoutX="700.0" layoutY="410.0" text="Create Alert"/>

    <!-- Generate Investigation Report Section -->
    <Label layoutX="20.0" layoutY="470.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Generate Investigation Report"/>
    <Label layoutX="30.0" layoutY="500.0" text="Case ID:"/>
    <TextField layoutX="90.0" layoutY="495.0" prefWidth="150.0"/>
    <Label layoutX="250.0" layoutY="500.0" text="Report Type:"/>
    <ChoiceBox layoutX="330.0" layoutY="495.0" prefWidth="120.0"/>
    <Label layoutX="30.0" layoutY="530.0" text="Findings:"/>
    <TextArea layoutX="30.0" layoutY="550.0" prefHeight="80.0" prefWidth="500.0"
              promptText="Investigation findings and analysis..."/>
    <Button layoutX="540.0" layoutY="570.0" text="Generate Report"/>
    <Button layoutX="650.0" layoutY="570.0" text="Save Draft"/>

    <!-- Submit to Enforcement Unit Section -->
    <Label layoutX="550.0" layoutY="470.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="5. Submit to Enforcement Unit"/>
    <Label layoutX="560.0" layoutY="500.0" text="Enforcement Team:"/>
    <ChoiceBox layoutX="670.0" layoutY="495.0" prefWidth="120.0"/>
    <Label layoutX="560.0" layoutY="530.0" text="Priority Level:"/>
    <ChoiceBox layoutX="650.0" layoutY="525.0" prefWidth="100.0"/>
    <Label layoutX="560.0" layoutY="560.0" text="Due Date:"/>
    <DatePicker layoutX="620.0" layoutY="555.0" prefWidth="130.0"/>
    <CheckBox layoutX="560.0" layoutY="585.0" text="Urgent Review Required"/>
    <Button layoutX="560.0" layoutY="610.0" text="Submit Case"/>
    <Button layoutX="650.0" layoutY="610.0" text="Schedule Meeting"/>

</AnchorPane>