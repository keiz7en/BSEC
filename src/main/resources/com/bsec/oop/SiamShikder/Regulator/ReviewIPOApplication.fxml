<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ReviewIPOApplication"
            prefHeight="700.0" prefWidth="1000.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Review IPO Application"/>
    <Button layoutX="900.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Access Submitted IPO Forms Section -->
    <Label layoutX="20.0" layoutY="70.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Access Submitted IPO Forms"/>
    <TableView layoutX="20.0" layoutY="100.0" prefHeight="150.0" prefWidth="600.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Application ID"/>
            <TableColumn prefWidth="200.0" text="Company Name"/>
            <TableColumn prefWidth="100.0" text="Submit Date"/>
            <TableColumn prefWidth="100.0" text="Status"/>
            <TableColumn prefWidth="100.0" text="Priority"/>
        </columns>
    </TableView>
    <Button layoutX="630.0" layoutY="120.0" text="Open Application"/>
    <Button layoutX="630.0" layoutY="160.0" text="Download Forms"/>
    <Button layoutX="630.0" layoutY="200.0" text="Request Clarification"/>

    <!-- Verify Compliance Documents Section -->
    <Label layoutX="20.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Verify Compliance Documents"/>
    <CheckBox layoutX="30.0" layoutY="300.0" text="Articles of Association"/>
    <CheckBox layoutX="200.0" layoutY="300.0" text="Board Resolutions"/>
    <CheckBox layoutX="350.0" layoutY="300.0" text="Audited Financials"/>
    <CheckBox layoutX="30.0" layoutY="330.0" text="Regulatory Approvals"/>
    <CheckBox layoutX="200.0" layoutY="330.0" text="Legal Opinions"/>
    <CheckBox layoutX="350.0" layoutY="330.0" text="Prospectus Draft"/>
    <TextArea layoutX="30.0" layoutY="360.0" prefHeight="60.0" prefWidth="500.0"
              promptText="Compliance verification notes..."/>
    <Button layoutX="540.0" layoutY="380.0" text="Mark Verified"/>

    <!-- Cross-check Financials Section -->
    <Label layoutX="570.0" layoutY="270.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Cross-check Financials"/>
    <Label layoutX="580.0" layoutY="300.0" text="Revenue (Last 3 Years):"/>
    <TextField layoutX="720.0" layoutY="295.0" prefWidth="100.0"/>
    <Label layoutX="580.0" layoutY="330.0" text="Net Income:"/>
    <TextField layoutX="720.0" layoutY="325.0" prefWidth="100.0"/>
    <Label layoutX="580.0" layoutY="360.0" text="Assets:"/>
    <TextField layoutX="720.0" layoutY="355.0" prefWidth="100.0"/>
    <Label layoutX="580.0" layoutY="390.0" text="Debt Ratio:"/>
    <TextField layoutX="720.0" layoutY="385.0" prefWidth="100.0"/>
    <Button layoutX="830.0" layoutY="340.0" text="Verify Figures"/>

    <!-- Approve/Reject IPO Request Section -->
    <Label layoutX="20.0" layoutY="450.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Approve/Reject IPO Request"/>
    <Label layoutX="30.0" layoutY="480.0" text="Application ID:"/>
    <TextField layoutX="140.0" layoutY="475.0" prefWidth="150.0"/>
    <Label layoutX="30.0" layoutY="510.0" text="Decision:"/>
    <RadioButton layoutX="100.0" layoutY="510.0" text="Approve"/>
    <RadioButton layoutX="180.0" layoutY="510.0" text="Reject"/>
    <RadioButton layoutX="240.0" layoutY="510.0" text="Request Revision"/>
    <Label layoutX="30.0" layoutY="540.0" text="Comments:"/>
    <TextArea layoutX="30.0" layoutY="560.0" prefHeight="80.0" prefWidth="400.0"
              promptText="Decision rationale and comments..."/>
    <Button layoutX="450.0" layoutY="580.0" text="Submit Decision"/>

    <!-- Notify Company Section -->
    <Label layoutX="500.0" layoutY="450.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="5. Notify Company"/>
    <Label layoutX="510.0" layoutY="480.0" text="Notification Type:"/>
    <ChoiceBox layoutX="620.0" layoutY="475.0" prefWidth="150.0"/>
    <Label layoutX="510.0" layoutY="510.0" text="Contact Person:"/>
    <TextField layoutX="610.0" layoutY="505.0" prefWidth="180.0"/>
    <Label layoutX="510.0" layoutY="540.0" text="Message:"/>
    <TextArea layoutX="510.0" layoutY="560.0" prefHeight="80.0" prefWidth="300.0" promptText="Notification message..."/>
    <Button layoutX="820.0" layoutY="580.0" text="Send Notification"/>

</AnchorPane>
