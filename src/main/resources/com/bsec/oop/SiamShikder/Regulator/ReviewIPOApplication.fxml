<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsec.oop.SiamShikder.Regulator.ReviewIPOApplication"
            prefHeight="950.0" prefWidth="1200.0">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Review IPO Application"/>
    <Button layoutX="1100.0" layoutY="20.0" text="Back" onAction="#goBack"/>

    <!-- Access Submitted IPO Forms Section -->
    <Label layoutX="20.0" layoutY="80.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="1. Access Submitted IPO Forms"/>
    <TableView layoutX="20.0" layoutY="110.0" prefHeight="150.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="120.0" text="Application ID"/>
            <TableColumn prefWidth="220.0" text="Company Name"/>
            <TableColumn prefWidth="120.0" text="Submit Date"/>
            <TableColumn prefWidth="120.0" text="Status"/>
            <TableColumn prefWidth="120.0" text="Priority"/>
        </columns>
    </TableView>
    <Button layoutX="740.0" layoutY="130.0" text="Open Application"/>
    <Button layoutX="740.0" layoutY="170.0" text="Download Forms"/>
    <Button layoutX="740.0" layoutY="210.0" text="Request Clarification"/>

    <!-- Verify Compliance Documents Section -->
    <Label layoutX="20.0" layoutY="300.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="2. Verify Compliance Documents"/>
    <CheckBox layoutX="30.0" layoutY="340.0" text="Articles of Association"/>
    <CheckBox layoutX="220.0" layoutY="340.0" text="Board Resolutions"/>
    <CheckBox layoutX="380.0" layoutY="340.0" text="Audited Financials"/>
    <CheckBox layoutX="30.0" layoutY="370.0" text="Regulatory Approvals"/>
    <CheckBox layoutX="220.0" layoutY="370.0" text="Legal Opinions"/>
    <CheckBox layoutX="380.0" layoutY="370.0" text="Prospectus Draft"/>
    <TextArea layoutX="30.0" layoutY="400.0" prefHeight="60.0" prefWidth="600.0"
              promptText="Compliance verification notes..."/>
    <Button layoutX="650.0" layoutY="420.0" text="Mark Verified"/>

    <!-- Cross-check Financials Section -->
    <Label layoutX="680.0" layoutY="300.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="3. Cross-check Financials"/>
    <Label layoutX="690.0" layoutY="340.0" text="Revenue (Last 3 Years):"/>
    <TextField layoutX="850.0" layoutY="335.0" prefWidth="120.0"/>
    <Label layoutX="690.0" layoutY="380.0" text="Net Income:"/>
    <TextField layoutX="850.0" layoutY="375.0" prefWidth="120.0"/>
    <Label layoutX="690.0" layoutY="420.0" text="Assets:"/>
    <TextField layoutX="850.0" layoutY="415.0" prefWidth="120.0"/>
    <Label layoutX="690.0" layoutY="460.0" text="Debt Ratio:"/>
    <TextField layoutX="850.0" layoutY="455.0" prefWidth="120.0"/>
    <Button layoutX="990.0" layoutY="390.0" text="Verify Figures"/>

    <!-- Approve/Reject IPO Request Section -->
    <Label layoutX="20.0" layoutY="510.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="4. Approve/Reject IPO Request"/>
    <Label layoutX="30.0" layoutY="550.0" text="Application ID:"/>
    <TextField layoutX="150.0" layoutY="545.0" prefWidth="180.0"/>
    <Label layoutX="30.0" layoutY="590.0" text="Decision:"/>
    <RadioButton layoutX="110.0" layoutY="590.0" text="Approve"/>
    <RadioButton layoutX="200.0" layoutY="590.0" text="Reject"/>
    <RadioButton layoutX="270.0" layoutY="590.0" text="Request Revision"/>
    <Label layoutX="30.0" layoutY="630.0" text="Comments:"/>
    <TextArea layoutX="30.0" layoutY="660.0" prefHeight="100.0" prefWidth="500.0"
              promptText="Decision rationale and comments..."/>
    <Button layoutX="550.0" layoutY="690.0" text="Submit Decision"/>

    <!-- Notify Company Section -->
    <Label layoutX="600.0" layoutY="510.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"
           text="5. Notify Company"/>
    <Label layoutX="610.0" layoutY="550.0" text="Notification Type:"/>
    <ChoiceBox layoutX="730.0" layoutY="545.0" prefWidth="180.0"/>
    <Label layoutX="610.0" layoutY="590.0" text="Contact Person:"/>
    <TextField layoutX="720.0" layoutY="585.0" prefWidth="200.0"/>
    <Label layoutX="610.0" layoutY="630.0" text="Message:"/>
    <TextArea layoutX="610.0" layoutY="660.0" prefHeight="100.0" prefWidth="350.0"
              promptText="Notification message..."/>
    <Button layoutX="610.0" layoutY="780.0" text="Send Notification"/>
    <Button layoutX="740.0" layoutY="780.0" text="Schedule Follow-up"/>

</AnchorPane>
