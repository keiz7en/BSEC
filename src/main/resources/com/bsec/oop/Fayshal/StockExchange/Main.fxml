<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.StockExchange.Main">
    <children>
        <!-- Header -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center;"
               text="Stock Exchange Dashboard"/>

        <!-- Menu Buttons Grid -->
        <GridPane hgap="20.0" vgap="15.0" alignment="center">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="300.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <!-- Goal 1: Manage Stock Listings -->
                <Button onAction="#manageStockListings" prefHeight="40.0" prefWidth="280.0" style="-fx-font-size: 14px;"
                        text="Manage Stock Listings" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                <!-- Goal 2: Publish Market Indices -->
                <Button onAction="#publishMarketIndices" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Publish Market Indices" GridPane.columnIndex="1"
                        GridPane.rowIndex="0"/>

                <!-- Goal 3: Handle Trading Halts -->
                <Button onAction="#handleTradingHalts" prefHeight="40.0" prefWidth="280.0" style="-fx-font-size: 14px;"
                        text="Handle Trading Halts" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <!-- Goal 4: Monitor Trading Activity -->
                <Button onAction="#monitorTradingActivity" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Monitor Real-time Trading" GridPane.columnIndex="1"
                        GridPane.rowIndex="1"/>

                <!-- Goal 5: Annual Market Reports -->
                <Button onAction="#publishAnnualReports" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Publish Annual Reports" GridPane.columnIndex="0"
                        GridPane.rowIndex="2"/>

                <!-- Goal 6: Manage Stock Delisting -->
                <Button onAction="#manageStockDelisting" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Manage Stock Delisting" GridPane.columnIndex="1"
                        GridPane.rowIndex="2"/>

                <!-- Goal 7: IPO Scheduling -->
                <Button onAction="#coordinateIPOScheduling" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Co-ordinate IPO Scheduling" GridPane.columnIndex="0"
                        GridPane.rowIndex="3"/>

                <!-- Goal 8: Investor Education -->
                <Button onAction="#investorEducationPrograms" prefHeight="40.0" prefWidth="280.0"
                        style="-fx-font-size: 14px;" text="Investor Education Programs" GridPane.columnIndex="1"
                        GridPane.rowIndex="3"/>
            </children>
        </GridPane>

        <!-- Back to Login Button -->
        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goToLogin" style="-fx-font-size: 14px;" text="Back to Login"/>
            </children>
        </HBox>
    </children>
</VBox>
