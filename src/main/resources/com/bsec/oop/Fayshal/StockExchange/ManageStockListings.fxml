<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0"
      style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #e8f5e8, #c8e6c8);"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.StockExchange.ManageStockListings">
    <children>
        <!-- Header -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"
               text="Manage Stock Listings"/>

        <!-- Listing Application Section -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;"
               text="New Listing Applications:"/>

        <TableView fx:id="applicationsTable" prefHeight="200.0"
                   style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="companyColumn" prefWidth="150.0" text="Company Name"/>
                <TableColumn fx:id="sectorColumn" prefWidth="100.0" text="Sector"/>
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Application Date"/>
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status"/>
                <TableColumn fx:id="documentsColumn" prefWidth="120.0" text="Documents"/>
                <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action"/>
            </columns>
        </TableView>

        <!-- Document Validation Section -->
        <Separator style="-fx-background-color: #4caf50;"/>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Document Validation:"/>

        <HBox spacing="10.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Selected Company:"/>
                <Label fx:id="selectedCompanyLabel"
                       style="-fx-font-size: 14px; -fx-text-fill: #2196f3; -fx-font-weight: bold;"
                       text="Select from table above"/>
            </children>
        </HBox>

        <VBox spacing="10.0"
              style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <CheckBox fx:id="financialStatementsCheck"
                          style="-fx-font-size: 14px; -fx-text-fill: #388e3c;" text="Financial Statements (3 years)"/>
                <CheckBox fx:id="auditReportCheck"
                          style="-fx-font-size: 14px; -fx-text-fill: #388e3c;" text="Independent Audit Report"/>
                <CheckBox fx:id="boardResolutionCheck"
                          style="-fx-font-size: 14px; -fx-text-fill: #388e3c;" text="Board Resolution"/>
                <CheckBox fx:id="prospectusCheck"
                          style="-fx-font-size: 14px; -fx-text-fill: #388e3c;" text="Company Prospectus"/>
                <CheckBox fx:id="regulatoryApprovalsCheck"
                          style="-fx-font-size: 14px; -fx-text-fill: #388e3c;" text="Regulatory Approvals"/>
            </children>
        </VBox>

        <!-- Eligibility Check -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Company Eligibility:"/>

        <HBox spacing="30.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #5d4037;"
                               text="Market Cap:"/>
                        <TextField fx:id="marketCapField" prefWidth="150.0" promptText="Enter market cap"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #5d4037;"
                               text="Years in Business:"/>
                        <TextField fx:id="yearsInBusinessField" prefWidth="150.0" promptText="Enter years"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #5d4037;"
                               text="Revenue (Last Year):"/>
                        <TextField fx:id="revenueField" prefWidth="150.0" promptText="Enter revenue"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Decision Section -->
        <HBox spacing="20.0" style="-fx-alignment: center;">
            <children>
                <Button style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to bottom, #4CAF50, #388e3c); -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 2);"
                        text="Approve Listing"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to bottom, #f44336, #d32f2f); -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 2);"
                        text="Reject Application"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Request More Documents"/>
            </children>
        </HBox>

        <!-- Status Area -->
        <TextArea fx:id="statusArea" prefHeight="80.0" editable="false"
                  style="-fx-background-color: #f5f5f5; -fx-border-color: #4caf50; -fx-border-radius: 5; -fx-background-radius: 5;"
                  promptText="Application status and notes will appear here..."/>

        <!-- Back Button -->
        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goBackToDashboard"
                        style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to bottom, #757575, #424242); -fx-text-fill: white; -fx-background-radius: 6; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                        text="Back to Dashboard"/>
            </children>
        </HBox>
    </children>
</VBox>