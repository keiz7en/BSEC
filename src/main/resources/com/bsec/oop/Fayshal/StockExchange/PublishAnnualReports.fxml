<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0"
      style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #fff3e0, #ffe0b2);"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.StockExchange.PublishAnnualReports">
    <children>
        <!-- Header -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e65100;"
               text="Publish Annual Market Reports"/>

        <!-- Report Year Selection -->
        <HBox spacing="15.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #bf360c;" text="Report Year:"/>
                <ComboBox fx:id="reportYearCombo" prefWidth="150.0"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Load Data"/>
            </children>
        </HBox>

        <!-- Data Collection Status -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d84315;"
               text="Data Collection Status:"/>

        <HBox spacing="30.0"
              style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <VBox spacing="5.0" style="-fx-alignment: center;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Trading Data:"/>
                        <Label fx:id="tradingDataStatus"
                               style="-fx-font-size: 14px; -fx-text-fill: #4caf50; -fx-font-weight: bold;"
                               text="Complete"/>
                    </children>
                </VBox>
                <VBox spacing="5.0" style="-fx-alignment: center;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Market Statistics:"/>
                        <Label fx:id="marketStatsStatus"
                               style="-fx-font-size: 14px; -fx-text-fill: #4caf50; -fx-font-weight: bold;"
                               text="Complete"/>
                    </children>
                </VBox>
                <VBox spacing="5.0" style="-fx-alignment: center;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Company Reports:"/>
                        <Label fx:id="companyReportsStatus"
                               style="-fx-font-size: 14px; -fx-text-fill: #ff9800; -fx-font-weight: bold;"
                               text="In Progress"/>
                    </children>
                </VBox>
                <VBox spacing="5.0" style="-fx-alignment: center;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Regulatory Data:"/>
                        <Label fx:id="regulatoryDataStatus"
                               style="-fx-font-size: 14px; -fx-text-fill: #4caf50; -fx-font-weight: bold;"
                               text="Complete"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Report Sections -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d84315;" text="Report Sections:"/>

        <VBox spacing="10.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <CheckBox fx:id="executiveSummaryCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;" text="Executive Summary"/>
                <CheckBox fx:id="marketOverviewCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;"
                          text="Market Overview &amp; Performance"/>
                <CheckBox fx:id="tradingStatisticsCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;" text="Trading Statistics"/>
                <CheckBox fx:id="listedCompaniesCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;" text="Listed Companies Analysis"/>
                <CheckBox fx:id="regulatoryUpdatesCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;" text="Regulatory Updates"/>
                <CheckBox fx:id="futureOutlookCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #1976d2;" text="Future Outlook"/>
            </children>
        </VBox>

        <!-- Report Generation -->
        <Separator style="-fx-background-color: #e65100;"/>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d84315;" text="Report Generation:"/>

        <HBox spacing="15.0" style="-fx-alignment: center;">
            <children>
                <Button style="-fx-font-size: 14px; -fx-background-color: #9c27b0; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Generate Draft"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Verify Data Accuracy"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Preview Report"/>
            </children>
        </HBox>

        <!-- Report Status -->
        <HBox spacing="10.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 5; -fx-padding: 10;">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Report Status:"/>
                <Label fx:id="reportStatusLabel"
                       style="-fx-font-size: 14px; -fx-text-fill: #2196f3; -fx-font-weight: bold;" text="Draft Ready"/>
            </children>
        </HBox>

        <!-- Publication Actions -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d84315;" text="Publication:"/>

        <HBox spacing="20.0" style="-fx-alignment: center;">
            <children>
                <Button style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to bottom, #4CAF50, #388e3c); -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 2);"
                        text="Publish Report"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #ff5722; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Schedule Publication"/>
                <Button style="-fx-font-size: 14px; -fx-background-color: #795548; -fx-text-fill: white; -fx-background-radius: 5;"
                        text="Notify Stakeholders"/>
            </children>
        </HBox>

        <!-- Stakeholder Notification -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d84315;" text="Stakeholder Groups:"/>

        <HBox spacing="15.0"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
            <children>
                <CheckBox fx:id="investorsCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #4caf50;" text="Investors"/>
                <CheckBox fx:id="brokersCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #4caf50;" text="Brokers"/>
                <CheckBox fx:id="regulatorsCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #4caf50;" text="Regulators"/>
                <CheckBox fx:id="mediaCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #4caf50;" text="Media"/>
                <CheckBox fx:id="publicCheck" selected="true"
                          style="-fx-font-size: 14px; -fx-text-fill: #4caf50;" text="General Public"/>
            </children>
        </HBox>

        <!-- Status Area -->
        <TextArea fx:id="publicationStatusArea" prefHeight="80.0" editable="false"
                  style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;"
                  promptText="Publication status and stakeholder notifications..."/>

        <!-- Back Button -->
        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goBackToDashboard"
                        style="-fx-font-size: 14px; -fx-background-color: linear-gradient(to bottom, #757575, #424242); -fx-text-fill: white; -fx-background-radius: 6; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                        text="Back to Dashboard"/>
            </children>
        </HBox>
    </children>
</VBox>