<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.Investor.AccountStatement">
   <children>
      <!-- Header -->
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Account Statement"/>

      <!-- Date Range Selection -->
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Select Statement Period:"/>

      <HBox spacing="15.0">
         <children>
            <Label style="-fx-font-size: 14px;" text="Start Date:"/>
            <DatePicker fx:id="startDatePicker" prefWidth="150.0"/>
            <Label style="-fx-font-size: 14px;" text="End Date:"/>
            <DatePicker fx:id="endDatePicker" prefWidth="150.0"/>
            <Button fx:id="generateStatementButton"
                    style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;"
                    text="Generate Statement"/>
         </children>
      </HBox>

      <!-- Quick Period Buttons -->
      <HBox spacing="10.0">
         <children>
            <Label style="-fx-font-size: 14px;" text="Quick Select:"/>
            <Button style="-fx-font-size: 12px;" text="Last Month"/>
            <Button style="-fx-font-size: 12px;" text="Last 3 Months"/>
            <Button style="-fx-font-size: 12px;" text="Last 6 Months"/>
            <Button style="-fx-font-size: 12px;" text="Last Year"/>
         </children>
      </HBox>

      <!-- Account Summary -->
      <Separator/>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Account Summary:"/>

      <HBox spacing="30.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px;" text="Opening Balance"/>
                  <Label fx:id="openingBalanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0.00"/>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px;" text="Closing Balance"/>
                  <Label fx:id="closingBalanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0.00"/>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px;" text="Total Transactions"/>
                  <Label fx:id="totalTransactionsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0"/>
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- Transaction History -->
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Transaction History:"/>
      <TableView fx:id="transactionTable" prefHeight="250.0">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date"/>
            <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type"/>
            <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description"/>
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount"/>
            <TableColumn fx:id="balanceColumn" prefWidth="120.0" text="Balance"/>
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status"/>
         </columns>
      </TableView>

      <!-- Action Buttons -->
      <HBox spacing="15.0" style="-fx-alignment: center;">
         <children>
            <Button fx:id="downloadPDFButton"
                    style="-fx-font-size: 14px; -fx-background-color: #FF5722; -fx-text-fill: white;"
                    text="Export as PDF"/>
            <Button fx:id="exportTransactionsButton"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                    text="Export as Excel"/>
            <Button fx:id="printStatementButton" style="-fx-font-size: 14px;" text="Print Statement"/>
         </children>
      </HBox>

      <!-- Status -->
      <Label fx:id="statusLabel" style="-fx-font-size: 12px; -fx-text-fill: blue;"
             text="Select date range to generate statement"/>

      <!-- Back Button -->
      <HBox style="-fx-alignment: center;">
         <children>
            <Button onAction="#goBackToMenu" style="-fx-font-size: 14px;" text="Back to Menu"/>
         </children>
      </HBox>
   </children>
</VBox>
