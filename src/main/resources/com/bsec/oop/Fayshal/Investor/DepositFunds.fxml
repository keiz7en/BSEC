<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="600.0" spacing="20.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.Investor.DepositFunds">
    <children>
        <!-- Header -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Deposit Funds"/>

        <!-- Current Balance -->
        <HBox spacing="10.0" style="-fx-alignment: center-left;">
            <children>
                <Label style="-fx-font-size: 16px;" text="Current Balance:"/>
                <Label fx:id="currentBalanceLabel"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: blue;" text="0.00"/>
                <Button fx:id="refreshBtn" onAction="#refreshBalance" text="Refresh"/>
            </children>
        </HBox>

        <!-- Deposit Amount -->
        <HBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Deposit Amount:"/>
                <TextField fx:id="depositAmountField" prefWidth="200.0" promptText="Enter amount to deposit"/>
            </children>
        </HBox>

        <!-- Quick Amount Buttons -->
        <HBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Quick Select:"/>
                <Button onAction="#setAmount1000" text="৳1,000"/>
                <Button onAction="#setAmount5000" text="৳5,000"/>
                <Button onAction="#setAmount10000" text="৳10,000"/>
                <Button onAction="#setAmount50000" text="৳50,000"/>
            </children>
        </HBox>

        <!-- Payment Method -->
        <HBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Payment Method:"/>
                <ComboBox fx:id="paymentMethodCombo" prefWidth="200.0" promptText="Select payment method"/>
            </children>
        </HBox>

        <!-- Bank Details (when Bank Transfer is selected) -->
        <VBox fx:id="bankDetailsSection" spacing="10.0" visible="false">
            <children>
                <Label fx:id="bankDetailsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"
                       text="Bank Transfer Details:"/>
                <HBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Account Number:"/>
                        <TextField fx:id="accountNumberField" prefWidth="200.0" promptText="Enter account number"/>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Card Details (when Card is selected) -->
        <VBox fx:id="cardDetailsSection" spacing="10.0" visible="false">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Card Details:"/>
                <HBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Card Number:"/>
                        <TextField fx:id="cardNumberField" prefWidth="200.0" promptText="Enter card number"/>
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Expiry Date:"/>
                        <TextField fx:id="expiryDateField" prefWidth="100.0" promptText="MM/YY"/>
                        <Label style="-fx-font-size: 14px;" text="CVV:"/>
                        <TextField fx:id="cvvField" prefWidth="80.0" promptText="CVV"/>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Transaction Summary -->
        <Separator/>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Transaction Summary"/>

        <HBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="Deposit Amount:"/>
                <Label fx:id="depositSummaryLabel" style="-fx-font-size: 14px; -fx-text-fill: green;" text="0.00"/>
            </children>
        </HBox>

        <HBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 14px;" text="New Balance:"/>
                <Label fx:id="newBalanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: blue;"
                       text="0.00"/>
            </children>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="15.0" style="-fx-alignment: center;">
            <children>
                <Button fx:id="depositBtn" onAction="#processDeposit"
                        style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                        text="Deposit Funds"/>
                <Button fx:id="clearBtn" onAction="#clearForm" style="-fx-font-size: 14px;" text="Clear"/>
            </children>
        </HBox>

        <!-- Status -->
        <TextArea fx:id="statusArea" prefHeight="60.0" editable="false" style="-fx-font-size: 12px;"/>

        <!-- Back Button -->
        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goBackToMenu" style="-fx-font-size: 14px;" text="Back to Menu"/>
            </children>
        </HBox>
    </children>
</VBox>
