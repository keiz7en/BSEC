<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bsec.oop.Fayshal.Investor.SearchAndViewStocks">
    <children>
        <!-- Header -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Search and View Stocks"/>

        <!-- Search Section -->
        <HBox spacing="10.0" style="-fx-alignment: center-left;">
            <children>
                <Label style="-fx-font-size: 14px;" text="Search Stock:"/>
                <TextField fx:id="searchField" prefWidth="250.0" promptText="Enter stock name or symbol"/>
                <Button fx:id="searchButton"
                        style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;"
                        text="Search"/>
            </children>
        </HBox>

        <!-- Filter Section -->
        <HBox spacing="15.0" style="-fx-alignment: center-left;">
            <children>
                <Label style="-fx-font-size: 14px;" text="Sector:"/>
                <ComboBox fx:id="sectorCombo" prefWidth="150.0" promptText="All Sectors"/>
                <Label style="-fx-font-size: 14px;" text="Price Range:"/>
                <TextField fx:id="minPriceField" prefWidth="80.0" promptText="Min"/>
                <Label text="-"/>
                <TextField fx:id="maxPriceField" prefWidth="80.0" promptText="Max"/>
                <Button text="Apply Filters"/>
            </children>
        </HBox>

        <!-- Stock List -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Stock Results:"/>
        <TableView fx:id="stockTable" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="symbolColumn" prefWidth="100.0" text="Symbol"/>
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Company Name"/>
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price"/>
                <TableColumn fx:id="changeColumn" prefWidth="100.0" text="Change %"/>
                <TableColumn fx:id="volumeColumn" prefWidth="100.0" text="Volume"/>
                <TableColumn fx:id="sectorColumn" prefWidth="100.0" text="Sector"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="15.0" style="-fx-alignment: center;">
            <children>
                <Button fx:id="viewChartButton" style="-fx-font-size: 14px;" text="View Details"/>
                <Button style="-fx-font-size: 14px;" text="Refresh Data"/>
                <Button fx:id="addToWatchlistButton"
                        style="-fx-font-size: 14px; -fx-background-color: #FF9800; -fx-text-fill: white;"
                        text="Add to Watchlist"/>
            </children>
        </HBox>

        <!-- Status -->
        <Label fx:id="statusLabel" style="-fx-font-size: 12px; -fx-text-fill: blue;" text="Ready to search stocks..."/>

        <!-- Back Button -->
        <HBox style="-fx-alignment: center;">
            <children>
                <Button onAction="#goBackToMenu" style="-fx-font-size: 14px;" text="Back to Menu"/>
            </children>
        </HBox>
    </children>
</VBox>
